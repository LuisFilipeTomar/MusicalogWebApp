@model WebApplication1.Models.Album

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Album_Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Album_Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Album_ArtistName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Album_ArtistName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Album_Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Album_Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Album_Cover)
        </dt>
        <dd class = "col-sm-10">

            @if (Model.Album_Cover == null)
            {
                <text>No album cover uploaded</text>
            }
            else
            {
                <p><img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Album_Cover)" style="width:350px" /></p>
            }

            @* @Html.DisplayFor(model => model.Album_Cover) *@
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Album_Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Album_Type.Album_TypeDesc)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Album_ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
