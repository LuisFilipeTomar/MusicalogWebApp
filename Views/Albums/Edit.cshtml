@model WebApplication1.Models.Album

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Album_ID" />
            <div class="form-group">
                <label asp-for="Album_Title" class="control-label"></label>
                <input asp-for="Album_Title" class="form-control" />
                <span asp-validation-for="Album_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album_ArtistName" class="control-label"></label>
                <input asp-for="Album_ArtistName" class="form-control" />
                <span asp-validation-for="Album_ArtistName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album_TypeID" class="control-label"></label>
                <select asp-for="Album_TypeID" class="form-control" asp-items="ViewBag.Album_TypeID"></select>
                <span asp-validation-for="Album_TypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album_Stock" class="control-label"></label>
                <input asp-for="Album_Stock" class="form-control" />
                <span asp-validation-for="Album_Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>
                    <label asp-for="Album_Cover" class="control-label"></label>
                    <input asp-for="Album_Cover" type="file" id="Album_Cover_File" name="Album_Cover_File" style="display:none;" />
                    <label for="Album_Cover_File" class="btn btn-primary">Click me to upload image</label>
                </p>
                
                @if (Model.Album_Cover == null)
                {
                    <text>No album cover uploaded</text>
                }
                else
                {
                    <p><img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Album_Cover)" style="width:350px" /></p>
                }
                
                <span asp-validation-for="Album_Cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
